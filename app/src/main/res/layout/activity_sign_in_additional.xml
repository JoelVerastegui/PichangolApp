<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.SignInAdditionalActivity" android:background="#FFFFFF">

    <TextView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/lblDatosAdicionales" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:background="@android:color/holo_orange_dark"
            android:text="Datos Adicionales" android:gravity="center" android:textSize="30sp"
            android:textColor="#FFFFFF"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtPhone"
            android:padding="10dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Telefono 1"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/lblDatosAdicionales"
            android:gravity="center"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtPhone2"
            android:padding="10dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Telefono 2"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/txtPhone"
            android:gravity="center"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtPhone3"
            android:padding="10dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Telefono 3"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/txtPhone2"
            android:gravity="center"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtDni"
            android:padding="10dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="DNI"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/txtPhone3"
            android:gravity="center"/>
    <TextView
            android:text="CONTINUAR"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/btnNext" android:background="#FF8902"
            android:textColor="#FFFFFF" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnSkip" android:textSize="20sp" android:gravity="center"/>
    <TextView
            android:text="OMITIR"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:id="@+id/btnSkip" android:background="#E77C02"
            android:textColor="#FFFFFF" app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center" android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <pl.droidsonroids.gif.GifImageView
            android:layout_width="0dp"
            android:layout_height="0dp" android:src="@drawable/loading_icon"
            android:id="@+id/imgLoading"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent" android:visibility="gone"/>
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.SignInAdditionalActivity" android:background="#FFFFFF">

    <TextView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/textView8" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:background="@android:color/holo_orange_dark"
            android:text="Datos Adicionales" android:gravity="center" android:textSize="30sp"
            android:textColor="#FFFFFF"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtPhone"
            android:padding="10dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Telefono 1"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textView8"
            android:gravity="center"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtPhone2"
            android:padding="10dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Telefono 2"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/txtPhone"
            android:gravity="center"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtPhone3"
            android:padding="10dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Telefono 3"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/txtPhone2"
            android:gravity="center"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtDni"
            android:padding="10dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="DNI"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/txtPhone3"
            android:gravity="center"/>
    <Button
            android:text="Continuar"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/btnSignIn3" app:layout_constraintStart_toStartOf="parent"
            android:background="@android:color/holo_orange_dark"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/btnSignIn2"/>
    <Button
            android:text="Omitir"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:id="@+id/btnSignIn2"
            android:background="#E77B00"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>
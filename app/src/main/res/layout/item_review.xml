<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/lblUserImg" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/lblUserName" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/lblUserImg"
            android:layout_marginStart="8dp"
            android:textStyle="bold" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/userStar1"/>
    <TextView
            android:layout_width="20dp"
            android:layout_height="20dp" android:id="@+id/userStar1"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/star"
            app:layout_constraintEnd_toStartOf="@+id/userStar2"/>
    <TextView
            android:layout_width="20dp"
            android:layout_height="20dp" android:id="@+id/userStar2"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/star"
            app:layout_constraintEnd_toStartOf="@+id/userStar3"/>
    <TextView
            android:layout_width="20dp"
            android:layout_height="20dp" android:id="@+id/userStar3"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/star"
            app:layout_constraintEnd_toStartOf="@+id/userStar4"/>
    <TextView
            android:layout_width="20dp"
            android:layout_height="20dp" android:id="@+id/userStar4"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/star" app:layout_constraintEnd_toStartOf="@+id/userStar5"
    />
    <TextView
            android:layout_width="20dp"
            android:layout_height="20dp" android:id="@+id/userStar5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/star"/>

    <TextView
        android:id="@+id/lblCommentary"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="top"
        android:maxLines="4"
        android:scrollbars="vertical"
        android:text="Lorem Ipsum DolorLorem Ipsum DolorLorem Ipsum DolorLorem Ipsum DolorLorem Ipsum DolorLorem Ipsum DolorLorem Ipsum DolorLorem Ipsum DolorLorem Ipsum DolorLorem Ipsum DolorLorem Ipsum DolorLorem Ipsum DolorLorem Ipsum DolorLorem Ipsum DolorLorem Ipsum DolorLorem Ipsum DolorLorem Ipsum DolorLorem Ipsum Dolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lblUserImg"
        app:layout_constraintTop_toBottomOf="@+id/lblUserName" />
    <View
            android:id="@+id/divider"
            android:layout_width="368dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>
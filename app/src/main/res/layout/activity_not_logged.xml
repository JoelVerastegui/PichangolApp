<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.NotLoggedActivity" android:background="#FFFFFF">

    <TextView
            android:text="Iniciar sesion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView16" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center" android:textSize="40sp" android:textColor="#FF8800" android:textStyle="bold"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toTopOf="@+id/txtEmail"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtEmail" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="Email"
            app:layout_constraintBottom_toTopOf="@+id/textView19"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtPassword" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtEmail" android:hint="Clave" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="INGRESAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnLogin" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/txtPassword" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:padding="15dp" android:background="#FF8A04" android:textColor="#FFFFFF" android:textStyle="bold"/>
    <TextView
            android:text="Continuar como invitado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblGuest" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/btnLogin"
            android:textColor="#FF8A04" android:textStyle="bold" android:textSize="16sp" android:padding="10dp"/>
    <TextView
            android:text="Registrate aqui"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:id="@+id/lblSignIn" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="#FFFFFF" android:gravity="center" android:background="#E77B01"/>
    <TextView
            android:text="Â¿No tienes una cuenta?"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:id="@+id/textView19" app:layout_constraintStart_toStartOf="parent"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent" android:gravity="center"
            android:background="#FF8902"
            app:layout_constraintEnd_toStartOf="@+id/lblSignIn"/>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/imgLoading"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        android:src="@drawable/loading_icon"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
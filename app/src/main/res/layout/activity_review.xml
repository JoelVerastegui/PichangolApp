<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.ReviewActivity">

    <TextView
        android:id="@+id/btnPublish"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="#FF8800"
        android:gravity="center"
        android:text="PUBLICAR"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/btnReview" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:background="@android:color/holo_orange_dark"
            android:text="Reseña" android:gravity="center" android:textSize="30sp"
            android:textColor="#FFFFFF"/>
    <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/lblBack"
            android:background="@drawable/back_arrow" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/btnReview"/>
    <TextView
            android:text="¿Cuantas estrellas le pones al local?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12" android:textSize="20sp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/btnReview"/>
    <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/star1" android:background="@drawable/star"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/textView12"
            app:layout_constraintEnd_toStartOf="@+id/star2" android:layout_marginEnd="8dp"/>
    <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/star2" android:background="@drawable/star"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/textView12"
            app:layout_constraintEnd_toStartOf="@+id/star3" android:layout_marginEnd="8dp"/>
    <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/star3" android:background="@drawable/star"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/textView12"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/star4" android:background="@drawable/star"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/textView12"
            app:layout_constraintStart_toEndOf="@+id/star3" android:layout_marginStart="8dp"/>
    <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/star5" android:background="@drawable/star"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/textView12"
            app:layout_constraintStart_toEndOf="@+id/star4" android:layout_marginStart="8dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/txtCommentary" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/star3"/>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/imgLoading"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        android:src="@drawable/loading_icon"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.HourActivity">

    <TextView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/lblHeader" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:background="@android:color/holo_orange_dark"
            android:gravity="center" android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:text="Horas"/>
    <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/lblBack"
            android:background="@drawable/back_arrow" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/btnReview"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblHeader"
            android:id="@+id/rvHours"/>
    <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/textView" android:background="#F56F6F" app:layout_constraintEnd_toStartOf="@+id/textView2"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView2" app:layout_constraintBottom_toBottomOf="@+id/textView2"/>
    <TextView
            android:text="Ocupada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintEnd_toStartOf="@+id/textView8"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toTopOf="@+id/textView8" app:layout_constraintBottom_toBottomOf="@+id/textView8"/>
    <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/textView8" android:background="#DBD6D6" app:layout_constraintEnd_toStartOf="@+id/textView9"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView9" app:layout_constraintBottom_toBottomOf="@+id/textView9"/>
    <TextView
            android:text="Disponible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/rvHours"/>
    <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/textView13" android:background="#90D65E"
            app:layout_constraintStart_toEndOf="@+id/textView9" android:layout_marginStart="24dp"
            app:layout_constraintTop_toTopOf="@+id/textView9" app:layout_constraintBottom_toBottomOf="@+id/textView9"/>
    <TextView
            android:text="Seleccionada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14" app:layout_constraintStart_toEndOf="@+id/textView13"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView13"
            app:layout_constraintBottom_toBottomOf="@+id/textView13"/>
    <TextView
            android:text="Horas seleccionadas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView15" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9" android:layout_marginTop="32dp"
            android:textSize="20sp" android:textStyle="bold"/>
    <TextView
            android:text="14:00 - 16:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblSelectedHours" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView15" android:textSize="20sp"/>
    <TextView
            android:text="Seleccione las horas de reserva"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/lblNonSelected" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView15"
            app:layout_constraintBottom_toBottomOf="@+id/lblSelectedHours" android:background="#FAFAFA"
            android:gravity="center" android:textSize="20sp"/>
    <TextView
            android:text="Siguiente"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/btnNext" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:background="#FFFF8800"
            android:textColor="#FFFFFF" android:textSize="20sp" android:gravity="center" android:translationY="100dp"/>
    <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/btnNextIcon"
            android:background="@drawable/next_arrow" app:layout_constraintEnd_toEndOf="@+id/btnNext"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/btnNext"
            app:layout_constraintBottom_toBottomOf="@+id/btnNext" android:translationY="100dp"/>
</android.support.constraint.ConstraintLayout>
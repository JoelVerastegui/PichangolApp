<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.PurchaseActivity">

    <TextView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/lblHeader" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:background="@android:color/holo_orange_dark"
            android:gravity="center" android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:text="Confirmacion"/>
    <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/lblBack"
            android:background="@drawable/back_arrow" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/btnReview"/>
    <TextView
            android:text="Local"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView17" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/lblHeader" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:textSize="20sp" android:textStyle="bold"/>
    <TextView
            android:text='Polideportivo "Contigo Peru"'
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/lblLocal" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:textSize="20sp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView17"/>
    <TextView
            android:text="Cancha"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView21" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@+id/lblLocal" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:textSize="20sp" android:textStyle="bold"
            android:layout_marginTop="24dp"/>
    <TextView
            android:text="Cancha 1 Miraflores"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/lblSoccerField" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:textSize="20sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/textView21" android:layout_marginTop="8dp"/>
    <TextView
            android:text="Horas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView22" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@+id/lblSoccerField" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:textSize="20sp" android:textStyle="bold"
            android:layout_marginTop="24dp"/>
    <TextView
            android:text="13:00 - 15:00 (2 horas)"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/lblHours" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:textSize="20sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/textView22" android:layout_marginTop="8dp"/>
    <TextView
            android:text="Tarifa por hora"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView23" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@+id/lblHours" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:textSize="20sp" android:textStyle="bold"
            android:layout_marginTop="24dp"/>
    <TextView
            android:text="S/. 52.50"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/lblPrice" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:textSize="20sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/textView23" android:layout_marginTop="8dp"/>
    <TextView
            android:text="Tarifa total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView24" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@+id/lblPrice" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:textSize="20sp" android:textStyle="bold"
            android:layout_marginTop="24dp"/>
    <TextView
            android:text="S/. 105"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/lblTotalPrice" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:textSize="20sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/textView24" android:layout_marginTop="8dp"/>
    <TextView
            android:text="Fecha reservada"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView20" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@+id/lblTotalPrice" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:textSize="20sp" android:textStyle="bold"
            android:layout_marginTop="24dp"/>
    <TextView
            android:text="16-06-2019"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/lblReservedDate" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:textSize="20sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/textView20" android:layout_marginTop="8dp"/>
    <TextView
            android:text="RESERVAR"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/btnReserve" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:background="#FF8902" android:textColor="#FFFFFF"
            android:gravity="center" android:textSize="20sp"/>
    <pl.droidsonroids.gif.GifImageView
            android:layout_width="0dp"
            android:layout_height="0dp" android:src="@drawable/loading_icon"
            android:id="@+id/imgLoading"
            android:background="#FFFFFF"
            android:visibility="gone" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>
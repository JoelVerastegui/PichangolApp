<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/lblHour" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:background="#D4D4D4"
            android:textColor="@android:color/white"
            android:text="08" android:gravity="center" android:textSize="30sp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/lblAvailability" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/lblHour"
            app:layout_constraintBottom_toBottomOf="@+id/lblHour" android:background="#FFFFFF"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:id="@+id/textView10" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:background="#D4D4D4"
            app:layout_constraintTop_toBottomOf="@+id/lblAvailability"/>
</android.support.constraint.ConstraintLayout>
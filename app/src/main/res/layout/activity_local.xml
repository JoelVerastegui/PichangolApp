<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.LocalActivity">

    <TextView
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:id="@+id/lblImg" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:background="@drawable/local_1_1"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/lblFilterImg" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/lblImg"
            android:background="@color/common_google_signin_btn_text_light_default"/>
    <TextView
            android:text='Polideportivo "Contigo Peru"'
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/lblName" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:textSize="16sp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="@+id/lblFilterImg"
            android:textColor="@android:color/white" android:textStyle="bold"/>
    <TextView
            android:text="Av. Ernesto Diez Canseco 482"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/lblAddress" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/lblFilterImg" android:textColor="@android:color/white"/>
    <TextView
            android:text="Polideportivo con canchas grandes de cesped artificial, incluye equipo deportivo."
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/lblDescription" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/lblFilterImg"
            android:textSize="16sp" android:scrollbars="vertical" android:maxLines="7"/>
    <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/lblFilterBack"
            android:background="@color/common_google_signin_btn_text_light_default"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/lblBack"
            android:background="@drawable/back_arrow" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/lblDescription" android:id="@+id/rvReview"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/btnReview">
    </android.support.v7.widget.RecyclerView>
    <TextView
            android:text="TextView"
            android:layout_width="90dp"
            android:id="@+id/lblImgReview"
            app:layout_constraintBottom_toBottomOf="@+id/btnReview" app:layout_constraintTop_toTopOf="@+id/btnReview"
            app:layout_constraintStart_toStartOf="@+id/btnReview" android:layout_marginStart="8dp"
            android:layout_marginTop="4dp" android:layout_marginBottom="4dp" android:layout_height="0dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/lblUserNameReview"
            app:layout_constraintTop_toTopOf="@+id/btnReview"
            app:layout_constraintStart_toEndOf="@+id/lblImgReview" android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toStartOf="@+id/starReview1" android:layout_marginEnd="8dp"/>
    <TextView
            android:layout_width="20dp"
            android:layout_height="20dp" android:id="@+id/starReview1"
            app:layout_constraintTop_toTopOf="@+id/btnReview"
            android:layout_marginTop="4dp" android:background="@drawable/star"
            app:layout_constraintEnd_toStartOf="@+id/starReview2"/>
    <TextView
            android:layout_width="20dp"
            android:layout_height="20dp" android:id="@+id/starReview2"
            app:layout_constraintTop_toTopOf="@+id/btnReview"
            android:layout_marginTop="4dp" android:background="@drawable/star"
            app:layout_constraintEnd_toStartOf="@+id/starReview3"/>
    <TextView
            android:layout_width="20dp"
            android:layout_height="20dp" android:id="@+id/starReview3"
            app:layout_constraintTop_toTopOf="@+id/btnReview"
            android:layout_marginTop="4dp" android:background="@drawable/star"
            app:layout_constraintEnd_toStartOf="@+id/starReview4"/>
    <TextView
            android:layout_width="20dp"
            android:layout_height="20dp" android:id="@+id/starReview4"
            app:layout_constraintTop_toTopOf="@+id/btnReview"
            android:layout_marginTop="4dp" android:background="@drawable/star"
            app:layout_constraintEnd_toStartOf="@+id/starReview5"/>
    <TextView
            android:layout_width="20dp"
            android:layout_height="20dp" android:id="@+id/starReview5"
            app:layout_constraintTop_toTopOf="@+id/btnReview"
            android:layout_marginTop="4dp" android:background="@drawable/star"
            app:layout_constraintEnd_toEndOf="@+id/btnReview" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Lorem Ipsum DolorLorem Ipsum DolorLorem Ipsum DolorLorem Ipsum DolorLorem Ipsum DolorLorem Ipsum DolorLorem Ipsum DolorLorem Ipsum DolorLorem Ipsum DolorLorem Ipsum DolorLorem Ipsum DolorLorem Ipsum DolorLorem Ipsum DolorLorem Ipsum DolorLorem Ipsum DolorLorem Ipsum DolorLorem Ipsum DolorLorem Ipsum Dolor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/lblCommentary"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/lblUserNameReview"
            app:layout_constraintStart_toEndOf="@+id/lblImgReview" android:layout_marginStart="8dp" android:maxLines="4"
            android:scrollbars="vertical" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/btnReview" android:gravity="top"
            app:layout_constraintEnd_toEndOf="@+id/btnReview" android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/btnReview"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="Escribe una reseña"
        android:textColor="#FF9800"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/btnReserve"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
            android:text="Reservar ahora"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/btnReserve" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@android:color/holo_orange_dark"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="20sp"/>
    <pl.droidsonroids.gif.GifImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/loading_icon"
            android:id="@+id/imgLoading"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/rvReview"
            android:background="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="@+id/rvReview" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0"/>

    <TextView
        android:id="@+id/lblNothing"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="No hay reseñas"
        android:textSize="25sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblDescription" />
</android.support.constraint.ConstraintLayout>
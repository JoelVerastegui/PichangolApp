<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.LocalActivity">

    <TextView
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:id="@+id/lblImg" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:background="@drawable/local_1_1"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/lblFilterImg" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/lblImg"
            android:background="@color/common_google_signin_btn_text_light_default"/>
    <TextView
            android:text='Polideportivo "Contigo Peru"'
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/lblName" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:textSize="16sp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="@+id/lblFilterImg"
            android:textColor="@android:color/white" android:textStyle="bold"/>
    <TextView
            android:text="Av. Ernesto Diez Canseco 482"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/lblAddress" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/lblFilterImg" android:textColor="@android:color/white"/>
    <TextView
            android:text="Polideportivo con canchas grandes de cesped artificial, incluye equipo deportivo."
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/lblDescription" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/lblFilterImg"
            android:textSize="16sp" android:scrollbars="vertical" android:maxLines="7"/>
    <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/lblFilterBack"
            android:background="@color/common_google_signin_btn_text_light_default"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/lblBack"
            android:background="@drawable/back_arrow" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/lblDescription" android:id="@+id/rvReview"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/editText">
    </android.support.v7.widget.RecyclerView>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btnReserve" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/textView2" android:hint="Escribe una reseÃ±a..."/>
    <Button
            android:text="Reservar ahora"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnReserve" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@android:color/holo_orange_dark"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:id="@+id/textView2"
            android:background="@android:color/holo_orange_dark" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btnReserve"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:background="@drawable/comment"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintBottom_toBottomOf="@+id/textView2" app:layout_constraintTop_toTopOf="@+id/textView2"/>
</android.support.constraint.ConstraintLayout>